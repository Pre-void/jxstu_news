/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 新闻列表区域样式 */
/* 新闻列表容器样式 */
#news-list{
  min-height: 600rpx;
  padding: 15rpx;
}
/* 新闻列表项目 */
.list-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid gray;
}
/** 新闻图片 */
.list-item image{
  width: 230rpx;
  height: 150rpx;
  margin: 10rpx;
}
/* 新闻标题 */
.news-title{
  width: 100%;
  display: flex;
  line-height: 60rpx;
  font-size: 10pt;
}
